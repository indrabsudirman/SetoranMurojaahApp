<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">


            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/grad"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <include
                    android:id="@+id/layout_toolbar_profile"
                    layout="@layout/layout_toolbar_profile" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/logOutAccount"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="left"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:rotation="180"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_logout_icon"
                    android:clickable="true"
                    android:focusable="true" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <include
            android:id="@+id/list_murojaah"
            layout="@layout/list_murojaah" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:backgroundTint="@color/teal_700"
        app:menu="@menu/app_bar_menu"
        app:navigationIcon="@drawable/ic_menu"
        android:clickable="true"
        android:focusable="true" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/extendedFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Add Murojaah"
        app:icon="@android:drawable/ic_input_add"
        app:layout_anchor="@id/bottomAppBar"
        app:maxImageSize="35dp"
        android:textColor="@color/white"
        app:iconTint="@color/white"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:layout_gravity="center"
        app:backgroundTint="@color/purple_200"
        android:textAllCaps="false"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>