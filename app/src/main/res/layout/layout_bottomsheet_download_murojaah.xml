<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_ayat_theme_rounded"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/constraintLayoutMain">

    <View
        android:layout_width="50dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:text="Download Murojaah"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textViewDownload"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorView"
        android:id="@+id/viewid"
        app:layout_constraintTop_toBottomOf="@id/textViewDownload"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pilihTanggalMurojaah"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_shape_purple"
        android:text="Pilih Tanggal Murojaah"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/viewid"
        app:layout_constraintStart_toStartOf="@id/viewid"
        app:layout_constraintEnd_toEndOf="@id/viewid"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:id="@+id/spinnerTypeMurojaah"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:entries="@array/type_murojaah_arrays"
        android:prompt="@string/type_murojaah"
        app:layout_constraintTop_toBottomOf="@id/pilihTanggalMurojaah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/viewIdBottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerTypeMurojaah"
        app:layout_constraintStart_toStartOf="@id/spinnerTypeMurojaah"
        app:layout_constraintEnd_toEndOf="@id/spinnerTypeMurojaah"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/coordinatorLayoutMain"
        app:layout_constraintTop_toBottomOf="@id/viewIdBottom"
        app:layout_constraintStart_toStartOf="@id/viewIdBottom"
        app:layout_constraintEnd_toEndOf="@id/viewIdBottom">

    </androidx.coordinatorlayout.widget.CoordinatorLayout>




</androidx.constraintlayout.widget.ConstraintLayout>